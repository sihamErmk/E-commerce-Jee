<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.0">
  <persistence-unit name="default">
    <class>ma.fstt.persistance.Commande</class>
    <class>ma.fstt.persistance.Panier</class>
    <class>ma.fstt.persistance.Produit</class>
    <class>ma.fstt.persistance.Client</class>

    <properties>
      <!-- Configuration de la base de données -->
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ecommerce"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value=""/>

      <!-- EclipseLink DDL generation settings -->
      <property name="eclipselink.ddl-generation" value="create-tables"/>

      <!-- EclipseLink : Afficher les requêtes SQL dans les logs -->
      <property name="eclipselink.logging.level" value="FINE"/>
      <property name="eclipselink.logging.level.sql" value="FINE"/>
    </properties>

  </persistence-unit>
</persistence>
